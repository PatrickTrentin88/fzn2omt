# Base Docker
FROM minizinc/mznc2023:latest

# Dependencies
RUN apt-get -y update
RUN apt-get -y install git
RUN apt-get -y install wget
RUN apt-get -y install python3

# Working directory. NOTE: preconfigured files assume this is the path in which fzn2omt is installed.
WORKDIR /opt/tools

RUN git clone https://github.com/PatrickTrentin88/fzn2omt.git

# Get OptiMathSAT
WORKDIR /opt/tools/fzn2omt/tools
RUN wget https://optimathsat.disi.unitn.it/releases/optimathsat-1.7.3/optimathsat-1.7.3-linux-64-bit.tar.gz
RUN tar -xf optimathsat-1.7.3-linux-64-bit.tar.gz
RUN rm optimathsat-1.7.3-linux-64-bit.tar.gz
WORKDIR /minizinc

# Update PATH
ENV PATH="$PATH:/opt/tools/fzn2omt/bin:/opt/tools/fzn2omt/tools/optimathsat-1.7.3-linux-64-bit/bin"
RUN echo "export PATH=$PATH:/opt/tools/fzn2omt/bin:/opt/tools/fzn2omt/tools/optimathsat-1.7.3-linux-64-bit/bin >> ~/.bashrc"

RUN echo '{"mzn_solver_path": ["/opt/tools/fzn2omt/minizinc_integration"],' > $HOME/.minizinc/Preferences.json && \
    echo '"tagDefaults": [["", "it.unitn.disi.optimathsat.int"]]}'           >> $HOME/.minizinc/Preferences.json
